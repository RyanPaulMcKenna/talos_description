<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:property name="wheel_radius" value="0.062265" />
	<xacro:property name="wheel_height" value="0.037817" />
	<xacro:property name="wheel_mass" value="1.20" />
	
	<xacro:macro name="wheel" params="prefix *origin parent">
	
		<link name="${prefix}_wheel_link">
		  <visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
			  <cylinder length="${wheel_height}" radius="${wheel_radius}" />
			</geometry>
			<material name="white"/>
		  </visual>
		  <collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
			  <cylinder length="${wheel_height}" radius="${wheel_radius}" />
			</geometry>
		  </collision>
		 <!-- <xacro:inertial_template mass="${base_mass}" length="${base_width}" width="${base_width}" height="${base_height}"/> -->
		</link>

               <joint name="${prefix}_wheel_joint" type="continuous">
                   <xacro:insert_block name="origin"/>
                   <child link="${prefix}_wheel_link"/>
                   <parent link="${parent}"/>
                   <axis xyz="0 1 0" rpy="0 0 0"/>
               </joint>
		
	</xacro:macro>

</robot>
